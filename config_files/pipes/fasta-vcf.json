{
  "description" : "Build Mosaik reference files and align fastq files using Mosaik (additional processing steps included).",
  "workflow" : [
    "build-reference",
    "build-jump-database",
    "generate-mosaik-parameters",
    "build-read-archive",
    "align",
    "sort-primary-bam",
    "sort-multiple-bam",
    "index-primary-bam",
    "count-covariates",
    "recalibrate-bq",
    "variant-call"
  ],
  "tools" : {
    "build-reference" : "mosaik-build-reference",
    "build-jump-database" : "mosaik-jump",
    "generate-mosaik-parameters" : "premo",
    "build-read-archive" : "mosaik-build-fastq",
    "align" : "mosaik-aligner",
    "sort-primary-bam" : "bamtools-sort",
    "sort-multiple-bam" : "bamtools-sort",
    "index-primary-bam" : "bamtools-index",
    "count-covariates" : "gatk-count-covariates",
    "recalibrate-bq" : "gatk-recalibrate-bq",
    "variant-call" : "freebayes"
  },
  "construct filenames" : {
    "build-reference" : {
      "-oa" : {
        "base name" : "from argument",
        "tool" : "build-reference",
        "argument" : "-fr",
        "remove extension" : "true"
      }
    },
    "build-jump-database" : {
      "-out" : {
        "base name" : "from argument",
        "tool" : "build-reference",
        "argument" : "-fr",
        "remove extension" : "true",
        "additional text from variables" : {
          "order" : [
            "base name",
            "hash-size"
          ],
          "hash-size" : {
            "tool" : "build-jump-database",
            "argument" : "-hs"
          }
        }
      }
    }
  },
  "linkage" : {
    "build-jump-database" : {
      "-ia" : {
        "tool" : "build-reference",
        "command" : "-oa"
      }
    },
    "generate-mosaik-parameters" : {
      "-hs" : {
        "tool" : "build-jump-database",
        "command" : "-hs"
      },
      "-ref" : {
        "tool" : "build-reference",
        "command" : "-oa"
      },
      "-jmp" : {
        "tool" : "build-jump-database",
        "command" : "-out"
      }
    },
    "build-read-archive" : {
      "-q" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-fq1"
      },
      "-q2" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-fq2"
      },
      "json parameters" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-out",
        "json block" : "MosaikBuild"
      }
    },
    "align" : {
      "-in" : {
        "tool" : "build-read-archive",
        "command" : "-out"
      },
      "-ia" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-ref"
      },
      "-hs" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-hs"
      },
      "-j" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-jmp"
      },
      "json parameters" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-out",
        "json block" : "MosaikAligner"
      }
    },
    "sort-primary-bam" : {
      "-in" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".bam"
      }
    },
    "sort-multiple-bam" : {
      "-in" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".multiple.bam"
      },
      "-out" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".multiple.sorted.bam"
      }
    },
    "index-primary-bam" : {
      "-in" : {
        "tool" : "sort-primary-bam",
        "command" : "-out"
      }
    },
    "count-covariates" : {
      "--input_file" : {
        "tool" : "sort-primary-bam",
        "command" : "-out"
      }
    },
    "recalibrate-bq" : {
      "--reference_sequence" : {
        "tool" : "build-reference",
        "command" : "-fr"
      },
      "--input_file" : {
        "tool" : "count-covariates",
        "command" : "--input_file"
      },
      "--recal_file" : {
        "tool" : "count-covariates",
        "command" : "--recal_file"
      }
    },
    "variant-call" : {
      "--bam" : {
        "tool" : "recalibrate-bq",
        "command" : "--out"
      },
      "--fasta-reference" : {
        "tool" : "build-reference",
        "command" : "-fr"
      }
    }
  },
  "arguments" : {
    "-fasta" : {
      "tool" : "build-reference",
      "command" : "-fr",
      "alternative" : "-f",
      "type" : "string",
      "default" : "test_genome.fa"
    },
    "--hash-size" : {
      "description" : "hash-size",
      "tool" : "build-jump-database",
      "command" : "-hs",
      "type" : "integer",
      "alternative" : "-hs"
    },
    "--fastq" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-fq1",
      "alternative" : "-q",
      "type" : "string"
    },
    "--fastq2" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-fq2",
      "alternative" : "-q2",
      "type" : "string"
    },
    "--mosaik-reference" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-ref",
      "alternative" : "-r",
      "type" : "string",
      "default" : "test_genome.dat"
    },
    "--mosaik-jump-database" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-jmp",
      "alternative" : "-j",
      "type" : "string",
      "default" : "test_genome"
    },
    "--batch-size" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-n",
      "alternative" : "-b",
      "type" : "integer"
    },
    "--sequencing-technology" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-st",
      "alternative" : "-st",
      "type" : "string"
    },
    "--median-fragment-length" : {
      "tool" : "build-read-archive",
      "command" : "-mfl",
      "type" : "integer",
      "alternative" : "-mfl"
    },
    "--out" : {
      "tool" : "build-read-archive",
      "command" : "-out",
      "alternative" : "-o",
      "type" : "string"
    },
    "--reference-fasta" : {
      "tool" : "count-covariates",
      "command" : "--reference_sequence",
      "alternative" : "-rf",
      "type" : "string",
      "default" : "test_genome.fa"
    },
    "--knownSites" : {
      "tool" : "count-covariates",
      "command" : "-knownSites",
      "alternative" : "-k",
      "type" : "flag"
    }
  }
}
