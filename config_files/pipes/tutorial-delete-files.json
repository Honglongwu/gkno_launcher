{
  "description" : "Simple tutorial pipeline to demonstrate how to delete intermediate files.",
  "workflow" : [
    "generate-mosaik-parameters",
    "build-read-archive",
    "align",
    "sort-primary-bam",
    "sort-multiple-bam"
  ],
  "tools" : {
    "generate-mosaik-parameters" : "premo",
    "build-read-archive" : "mosaik-build-fastq",
    "align" : "mosaik-aligner",
    "sort-primary-bam" : "bamtools-sort",
    "sort-multiple-bam" : "bamtools-sort"
  },
  "linkage" : {
    "build-read-archive" : {
      "-q" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-fq1"
      },
      "-q2" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-fq2"
      },
      "json parameters" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-out",
        "json block" : "MosaikBuild"
      }
    },
    "align" : {
      "-in" : {
        "tool" : "build-read-archive",
        "command" : "-out"
      },
      "-ia" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-ref"
      },
      "-hs" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-hs"
      },
      "-j" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-jmp"
      },
      "json parameters" : {
        "tool" : "generate-mosaik-parameters",
        "command" : "-out",
        "json block" : "MosaikAligner"
      }
    },
    "sort-primary-bam" : {
      "-in" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".bam"
      }
    },
    "sort-multiple-bam" : {
      "-in" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".multiple.bam"
      },
      "-out" : {
        "tool" : "align",
        "command" : "-out",
        "extension" : ".multiple.sorted.bam"
      }
    }
  },
  "arguments" : {
    "--fastq" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-fq1",
      "alternative" : "-q",
      "type" : "string",
      "user entry required" : "true",
      "default" : "$(RESOURCES)/simulated_reads_1.fq"
    },
    "--fastq2" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-fq2",
      "alternative" : "-q2",
      "type" : "string",
      "user entry required" : "true",
      "default" : "$(RESOURCES)/simulated_reads_2.fq"
    },
    "--mosaik-reference" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-ref",
      "alternative" : "-r",
      "type" : "string",
      "default" : "$(RESOURCES)/test_genome.dat"
    },
    "--mosaik-jump-database" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-jmp",
      "alternative" : "-j",
      "type" : "string",
      "default" : "$(RESOURCES)/test_genome_15"
    },
    "--batch-size" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-n",
      "alternative" : "-b",
      "type" : "integer"
    },
    "--sequencing-technology" : {
      "tool" : "generate-mosaik-parameters",
      "command" : "-st",
      "alternative" : "-st",
      "type" : "string"
    },
    "--median-fragment-length" : {
      "tool" : "build-read-archive",
      "command" : "-mfl",
      "type" : "integer",
      "alternative" : "-mfl"
    },
    "--out" : {
      "tool" : "build-read-archive",
      "command" : "-out",
      "alternative" : "-o",
      "type" : "string"
    }
  },


  "delete files" : {
    "build-read-archive" : {
      "-out" : {
        "delete after task" : "align"
      }
    },
    "align" : {
      "-out" : {
        ".bam" : {
          "delete after task" : "sort-primary-bam"
        }
      }
    }
  }
}
