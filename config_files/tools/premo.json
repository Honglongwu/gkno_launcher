{
  "tools" : {
    "premo" : {
      "description" : "Determine MosaikAligner parameters based on read and fragment length",
      "path" : "premo/bin",
      "executable" : "premo",
      "resource path" : "tutorial/current",
      "help" : "--help|-h",
      "arguments" : {
        "-fq1" : {
          "description" : "The input fastq file (first mate)",
          "input" : "true",
          "output" : "false",
          "required" : "true",
          "resource" : "false",
          "dependent" : "true",
          "type" : "string",
          "extension" : "fq|fastq|fq.gz|fastq.gz"
        },
        "-fq2" : {
          "description" : "The input fastq file (second mate)",
          "input" : "true",
          "output" : "false",
          "required" : "false",
          "resource" : "false",
          "dependent" : "true",
          "type" : "string",
          "extension" : "fq|fastq|fq.gz|fastq.gz"
        },
        "-ref" : {
          "description" : "Mosaik reference archive",
          "input" : "true",
          "output" : "false",
          "required" : "true",
          "resource" : "false",
          "dependent" : "true",
          "type" : "string",
          "extension" : "dat"
        },
        "-jmp" : {
          "description" : "Stub for Mosaik jump table files",
          "input" : "true",
          "output" : "false",
          "required" : "true",
          "resource" : "false",
          "dependent" : "true",
          "type" : "string",
          "extension" : "stub",
          "stub" : "true",
          "outputs" : [
            "_keys.jmp",
            "_meta.jmp",
            "_positions.jmp"
          ]
        },
        "-mosaik" : {
          "description" : "Path to Mosaik bin",
          "input" : "false",
          "output" : "false",
          "required" : "true",
          "resource" : "false",
          "dependent" : "false",
          "type" : "string",
          "default" : "$(TOOL_BIN)/MOSAIK/bin"
        },
        "-out" : {
          "description" : "Output json file",
          "input" : "false",
          "output" : "true",
          "required" : "true",
          "resource" : "false",
          "dependent" : "false",
          "type" : "string",
          "extension" : "json",
          "default" : "$(MAKEFILE_ID)_mosaikParameters.json"
        },
        "-annse" : {
          "description" : "Neural network file (single end)",
          "input" : "true",
          "output" : "false",
          "resource" : "true",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "extension" : "ann"
        },
        "-annpe" : {
          "description" : "Neural network file (paired end)",
          "input" : "true",
          "output" : "false",
          "resource" : "true",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "extension" : "ann"
        },
        "-tmp" : {
          "description" : "Scratch directory for generated files",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "string",
          "default" : "$(PWD)/$(MAKEFILE_ID)_tmp"
        },
        "-st" : {
          "description" : "Sequencing technology: '454', 'helicos', 'illumina', 'illumina_long', 'sanger' or 'solid'",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "string",
          "default" : "illumina"
        },
        "-n" : {
          "description" : "Number of pairs to align per batch",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "integer",
          "default" : "1000"
        },
        "-hs" : {
          "description" : "Mosaik hash size",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "integer",
          "default" : "15"
        },
        "-se" : {
          "description" : "Specify that only single end reads are used as input.",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "flag"
        }
      }
    }
  }
}
