{
  "tools" : {
    "tangram-index" : {
      "description" : "Create an indexed reference file including the mobile elements",
      "path" : "Tangram/bin",
      "executable" : "tangram_index",
      "help" : "--help|-h",
      "arguments" : {
        "-ref" : {
          "description" : "The input reference file.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "fa|fasta"
        },
        "-sp" : {
          "description" : "The input reference file containing the insertion sequences.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "fa|fasta"
        },
        "-out" : {
          "description" : "The output reference file.",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "dat"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "tangram-scan" : {
      "description" : "Generate a histogram of the fragment length distributions of the input libraries.",
      "path" : "Tangram/bin",
      "executable" : "tangram_scan",
      "help" : "--help|-h",
      "arguments" : {
        "-in" : {
          "description" : "The list of input BAM files.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "no extension"
        },
        "-dir" : {
          "description" : "Path of the output directory.  This must be empty or non-existent.",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension",
          "do not construct filename from input" : true,
          "directory" : true,
          "generated files" : [
            "lib_table.dat",
            "hist.dat"
          ]
        },
        "-cf" : {
          "description" : "Threshold for determining consistency with the fragment length distribution [0.01]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "float",
          "extension" : "no extension"
        },
        "-tr" : {
          "description" : "Trim rate for the fragment length distribution [0.02]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "float",
          "extension" : "no extension"
        },
        "-mq" : {
          "description" : "Minimum mapping quality for a normal read pair",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mf" : {
          "description" : "The minimum number of normal fragments in a library [10000].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "tangram-merge" : {
      "description" : "Merges fragment length distributions from multiple BAM files.",
      "path" : "Tangram/bin",
      "executable" : "tangram_merge",
      "help" : "--help|-h",
      "arguments" : {
        "-dir" : {
          "description" : "Path of the directory containing the fragment length distribution information (output of tangram-scan).",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "tangram-detect" : {
      "description" : "Detect and genotype structural variation events.",
      "path" : "Tangram/bin",
      "executable" : "tangram_detect",
      "help" : "--help|-h",
      "arguments" : {
        "-lb" : {
          "description" : "Library information file (generated by tangram-scan).",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "dat"
        },
        "-ht" : {
          "description" : "Fragment length distribution histogram file (generated by tangram-scan).",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "dat"
        },
        "-in" : {
          "description" : "The list of input BAM files.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "-rg" : {
          "description" : "Genomic region.",
          "input" : false,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "-ref" : {
          "description" : "Tangram reference sequence file.",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "dat"
        },
        "-out" : {
          "description" : "The output file (including path) [stdout].",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "vcf"
        },
        "-cl" : {
          "description" : "Check for invalid libraries.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mcs" : {
          "description" : "Minimum cluster size [2].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mel" : {
          "description" : "Minimum event length [100].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mq" : {
          "description" : "Minimum mapping quality for pairs (special pairs excepted) [20].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-smq" : {
          "description" : "Minimum mapping quality for special pairs 20].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-dt" : {
          "description" : "Which SV types to detect. 1 - DELETION, 2 - TANDEM DUP, 4 - INVERSION, 8 - MEI. For multiple event classes, input the sum of the preceding values [8 - ALL TYPES]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-msr" : {
          "description" : "Minimum score rate for split read alignments [0.8]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "float",
          "extension" : "no extension"
        },
        "-gt" : {
          "description" : "Genotype SV events?",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "-bp" : {
          "description" : "Binominal distribution parameters for the three possible genotypes (RR, RA and AA) [0.001, 0.5, 0.999].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "-rpf" : {
          "description" : "Minimum number of supporting read-pair fragments for genotyping [2].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-srf" : {
          "description" : "Minimum number of supporting split-read fragments for genotyping [5].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mjl" : {
          "description" : "Minimum jumping (BAM index jump) length for genotyping. Set to 0 to turn off jumping. [500000]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-p" : {
          "description" : "Number of threads [1].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files.",
          "-gt" : true
        },
        "mei" : {
          "description" : "Generate MEI calls only.",
          "-gt" : true,
          "-dt" : "8"
        }
      }
    }
  }
}
