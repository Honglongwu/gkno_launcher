{
  "tools" : {
    "freebayes" : {
      "description" : "Bayesian variant and haplotype calling",
      "path" : "freebayes/bin",
      "executable" : "freebayes",
      "help" : "--help|-h",
      "arguments" : {
        "--bam" : {
          "description" : "Add FILE to the set of BAM files to be analyzed.",
          "input" : "true",
          "use for filenames" : "true",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "true",
          "short form argument" : "-b",
          "extension" : "bam",
          "if input is stream" : "replace",
          "replace argument with" : {
            "argument" : "--stdin",
            "value" : ""
          },
          "type" : "string"
        },
        "--vcf" : {
          "description" : "Output VCF-format results to FILE.",
          "input" : "false",
          "output" : "true",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "short form argument" : "-v",
          "extension" : "vcf",
          "type" : "string"
        },
        "--fasta-reference" : {
          "description" : "Use FILE as the reference sequence for analysis.",
          "input" : "true",
          "output" : "false",
          "resource" : "true",
          "required" : "true",
          "dependent" : "true",
          "short form argument" : "-f",
          "extension" : "fa|fasta",
          "type" : "string"
        },
        "--no-snps" : {
          "description" : "Ignore SNP alleles.",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-I",
          "type" : "flag"
        },
        "--no-indels" : {
          "description" : "Ignore insertion and deletion alleles.",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-i",
          "type" : "flag"
        },
        "--no-mnps" : {
          "description" : "Ignore multi-nuceotide polymorphisms, MNPs.",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-X",
          "type" : "flag"
        },
        "--no-complex" : {
          "description" : "Ignore complex events (composites of other classes).",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-u",
          "type" : "flag"
        },
        "--use-best-n-alleles" : {
          "description" : "Evaluate only the best N SNP alleles, ranked by sum of|supporting quality scores.  (Set to 0 to use all; default: all)",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-n",
          "type" : "flag"
        },
        "--max-complex-gap" : {
          "description" : "Allow complex alleles with contiguous embedded matches of up|to this length.",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "short form argument" : "-E",
          "type" : "flag"
        }
      }
    }
  }
}
