{
  "tools" : {
    "dedup" : {
      "description" : "Mark duplicate reads in a BAM file (University of Michigan).",
      "path" : "bamUtil/bin",
      "executable" : "bam",
      "modifier" : "dedup",
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "Input BAM file name (must be sorted).",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "bam"
        },
        "--out" : {
          "description" : "Output BAM file name (same order with original file).",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "bam"
        },
        "--minQual" : {
          "description" : "Only add scores over this phred quality when determining a read's quality (default: 15)",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--log" : {
          "description" : "Log and summary statistics (default: [outfile].log, or stderr if --out starts with '-').",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "log"
        },
        "--oneChrom" : {
          "description" : "Treat reads with mates on different chromosomes as single-ended.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--rmDups" : {
          "description" : "Remove duplicates (default is to mark duplicates).",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--force" : {
          "description" : "Allow an already mark-duplicated BAM file, unmarking any previously marked duplicates and apply this duplicate marking logic.  Default is to throw errors and exit when trying to run on an already mark-duplicated BAM.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--noeof" : {
          "description" : "Do not expect an EOF block on a bam file.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "recab" : {
      "description" : "Recalibrate base qualities in a BAM file (University of Michigan).",
      "path" : "bamUtil/bin",
      "executable" : "bam",
      "modifier" : "recab",
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "Input BAM file name.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "bam"
        },
        "--out" : {
          "description" : "Output recalibrated BAM file name.",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "bam"
        },
        "--log" : {
          "description" : "Log and summary statistics (default: [outfile].log, or stderr if --out starts with '-').",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "log"
        },
        "--noeof" : {
          "description" : "Do not expect an EOF block on a bam file.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--refFile" : {
          "description" : "Reference file name.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "fa|fasta"
        },
        "--dbsnp" : {
          "description" : "dbsnp file of positions.",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "vcf"
        },
        "--minBaseQual" : {
          "description" : "Minimum base quality of bases to recalibrate (default: 5).",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--maxBaseQual" : {
          "description" : "Maximum recalibrated base quality (default: 50).",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--blended" : {
          "description" : "Blended model weight.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--fitModel" : {
          "description" : "Check if the logistic regression model fits the data overriden by fast, but automatically applied by useLogReg.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--fast" : {
          "description" : "use a compact representation that only allows:|* at most 256 Read Groups|* maximum quality 63|* at most 127 cycles|overrides fitModel, but is overridden by useLogReg uses up to about 2.25G more memory than running without --fast.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--keepPrevDbsnp" : {
          "description" : "Do not exclude entries where the previous base is in dbsnp when building the recalibration table. By default they are excluded from the table.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--keepPrevNonAdjacent" : {
          "description" : "Do not exclude entries where the previous base is not adjacent (not a Cigar M/X/=) when building the recalibration table.  By default they are excluded from the table (except the first cycle).",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--useLogReg" : {
          "description" : "Use logistic regression calculated quality for the new quality automatically applies fitModel and overrides fast.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--qualField" : {
          "description" : "Tag to get the starting base quality (default is to get it from the Quality field).",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "--storeQualTag" : {
          "description" : "Tag to store the previous quality into.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "diff" : {
      "description" : "Compare two coordinate sorted BAM/SAM files (University of Michigan).",
      "path" : "bamUtil/bin",
      "executable" : "bam",
      "modifier" : "diff",
      "help" : "--help|-h",
      "arguments" : {
        "--in1" : {
          "description" : "First coordinate sorted SAM/BAM file to be diffed.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "bam|sam"
        },
        "--in2" : {
          "description" : "Second coordinate sorted SAM/BAM file to be diffed.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "bam|sam"
        },
        "--out" : {
          "description" : "output filename, use .bam extension to output in SAM/BAM format instead of diff format.  In SAM/BAM format there will be 3 output files: 1) the specified name with record diffs 2) specified name with _only_<in1>.sam/bam with records only in the in1 file 3) specified name with _only_<in2>.sam/bam with records only in the in2 file.",
          "input" : false,
          "output" : true,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "--all" : {
          "description" : "Diff all the SAM/BAM fields.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--flag" : {
          "description" : "Diff the flags.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--mapQual" : {
          "description" : "Diff the mapping qualities.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--mate" : {
          "description" : "Diff the mate chrom/pos.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--isize" : {
          "description" : "Diff the insert sizes.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--seq" : {
          "description" : "Diff the sequence bases.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--baseQual" : {
          "description" : "Diff the base qualities.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--tags" : {
          "description" : "Diff the specified Tags formatted as Tag:Type;Tag:Type;Tag:Type...",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "--everyTag" : {
          "description" : "Diff all the Tags",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--noCigar" : {
          "description" : "Do not diff the the cigars.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--noPos" : {
          "description" : "Do not diff the positions.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--onlyDiffs" : {
          "description" : "Only print the fields that are different, otherwise for any diff all the fields that are compared are printed.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--recPoolSize" : {
          "description" : "Number of records to allow to be stored at a time, default value: 1000000.  Set to -1 for unlimited number of records",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--posDiff" : {
          "description" : "Max base pair difference between possibly matching records, default value: 100000",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "--noeof" : {
          "description" : "Do not expect an EOF block on a bam file.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "--params" : {
          "description" : "Print the parameter settings.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "bam2FastQ" : {
      "description" : "Convert the specified BAM file to fastQ files.",
      "path" : "bamUtil/bin",
      "executable" : "bam",
      "modifier" : "bam2FastQ",
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "The SAM/BAM file to convert to FastQ.",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "bam|sam"
        },
        "--out" : {
          "description" : "Output name for generated output files.",
          "input" : false,
          "output" : true,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    }
  }
}
