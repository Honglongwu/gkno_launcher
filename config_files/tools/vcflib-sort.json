{
  "description" : "Sort a vcf file.",
  "path" : "vcflib/bin",
  "executable" : "vcfsort",
  "hide tool" : false,
  "help" : "--help|-h",
  "arguments" : [
    {
      "description" : "The input vcf file.",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "command line argument" : "--in",
      "input" : true,
      "output" : false,
      "required" : true,
      "extension" : ".vcf|.vcf.gz",
      "if input is stream" : "do not include",
      "data type" : "string"
    },
    {
      "description" : "The output sorted VCF file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "command line argument" : "--out",
      "output" : true,
      "input" : false,
      "required" : true,
      "data type" : "string",
      "extension" : ".vcf",
      "if output to stream" : "do not include",
      "modify argument name on command line" : "stdout",
      "construct filename" : {
        "method": "from tool argument",
        "use argument" : "--in",
        "modify extension" : "replace",
        "add additional text" : "sorted"
      }
    }
  ],

  "argument order" : [
    "--in",
    "--out"
  ],

  "instances" : [
    {
      "ID" : "default",
      "description" : "Default instance requires the users input for all files.",
      "nodes" : []
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "vcf",
          "values" : ["$(RESOURCES)/tutorial/current/mutated_genome.vcf"],
          "argument" : "--in"
        },
        {
          "ID" : "output path",
          "values" : ["./"],
          "argument" : "--output-path"
        }
      ]
    }
  ]
}
