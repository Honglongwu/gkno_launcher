{
  "description" : "Generate a dictionary containing all of the sequences in the input reference fasta.",
  "path" : "picard/dist",
  "executable" : "CreateSequenceDictionary.jar",
  "precommand" : "java -jar",
  "argument delimiter" : "=",
  "help" : "--help|-h",
  "arguments" : [
    {    
      "description" : "the input reference FASTA file.",
      "long form argument" : "--fasta-reference",
      "short form argument" : "-r",
      "command line argument" : "REFERENCE",
      "input" : true,
      "output" : false,
      "required" : true,
      "data type" : "string",
      "extension" : ".fa|.fasta"
    },
    {    
      "description" : "the output sequence dictionary.",
      "long form argument" : "--output",
      "short form argument" : "-o",
      "command line argument" : "OUTPUT",
      "input" : false,
      "output" : true,
      "required" : true,
      "data type" : "string",
      "extension" : ".dict",
      "construct filename" : {
        "ID": "from tool argument",
        "use argument" : "--fasta-reference",
        "modify extension" : "replace"
      }
    }
  ],

  "instances" : [
    {
      "ID" : "default",
      "description" : "Default instance requires the users input for all files.",
      "nodes" : [
      ]
    },

    {
      "ID" : "test",
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "reference",
          "values" : ["../resources/tutorial/current/test_genome.fa"],
          "argument" : "--fasta-reference"
        }
      ]
    }
  ]
}
