{
  "tools" : {
    "gatk-count-covariates" : {
      "description" : "Count covariates",
      "path" : "gatk/dist",
      "executable" : "GenomeAnalysisTK.jar",
      "precommand" : "java -Xmx2g -jar",
      "help" : "--help|-h",
      "additional files" : {
        "from input arguments" : [
          {
            "type" : "dependency",
            "command" : "--input_file",
            "remove extension" : "false",
            "add extension" : "true",
            "output extension" : "bai",
            "stub" : "false"
          }
        ]
      },
      "arguments" : {
        "--reference_sequence" : {
          "description" : "the reference fasta file",
          "input" : "true",
          "output" : "false",
          "required" : "true",
          "resource" : "true",
          "dependent" : "true",
          "type" : "string",
          "short form argument" : "-R",
          "extension" : "fasta|fa"
        },
        "--input_file" : {
          "description" : "input SAM or BAM file(s)",
          "input" : "true",
          "use for filenames" : "true",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "short form argument" : "-I",
          "extension" : "sam|bam"
        },
        "--out" : {
          "description" : "output covariates table recalibration file",
          "input" : "false",
          "output" : "true",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "string",
          "short form argument" : "-recalFile",
          "extension" : "csv"
        },
        "-knownSites" : {
          "description" : "vcf file containing known variant sites",
          "input" : "true",
          "output" : "false",
          "resource" : "true",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "extension" : "vcf",
          "default" : "test_genome.dbSNP.snps.sites.vcf"
        },
        "--logging_level" : {
          "description" : "minimum level of logging",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "string",
          "short form argument" : "-l",
          "extension" : "vcf",
          "default" : "INFO"
        },
        "--analysis_type" : {
          "description" : "type of analysis to run",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "string",
          "extension" : "null",
          "short form argument" : "-T",
          "default" : "BaseRecalibrator"
        },
        "--covariate" : {
          "description" : "covariates to be used",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "string",
          "short form argument" : "-cov",
          "default" : [
            "ReadGroupCovariate",
            "QualityScoreCovariate",
            "CycleCovariate",
            "ContextCovariate"
          ]
        },
        "--disable_indel_quals" : {
          "description" : "disable indel recalibration (not available in GATK-Lite)",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "flag",
          "short form argument" : "-DIQ",
          "default" : "set"
        },
      }
    },

    "gatk-recalibrate-bq" : {
      "description" : "Recalibrate base qualities",
      "path" : "gatk/dist",
      "executable" : "GenomeAnalysisTK.jar",
      "precommand" : "java -Xmx2g -jar",
      "help" : "--help|-h",
      "arguments" : {
        "--reference_sequence" : {
          "description" : "the reference fasta file",
          "input" : "true",
          "output" : "false",
          "required" : "true",
          "resource" : "true",
          "dependent" : "true",
          "type" : "string",
          "short form argument" : "-R",
          "extension" : "fasta|fa"
        },
        "--input_file" : {
          "description" : "input SAM or BAM file(s)",
          "input" : "true",
          "use for filenames" : "true",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "short form argument" : "-I",
          "extension" : "sam|bam"
        },
        "--BQSR" : {
          "description" : "input covariates table recalibration file",
          "input" : "true",
          "output" : "false",
          "resource" : "false",
          "required" : "true",
          "dependent" : "true",
          "type" : "string",
          "short form argument" : "-BQSR",
          "extension" : "csv"
        },
        "--analysis_type" : {
          "description" : "type of analysis to run",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "string",
          "short form argument" : "-T",
          "default" : "PrintReads"
        },
        "--out" : {
          "description" : "the output recalibrated BAM file",
          "input" : "false",
          "output" : "true",
          "resource" : "false",
          "required" : "true",
          "dependent" : "false",
          "type" : "string",
          "extension" : "recal.bam",
          "short form argument" : "-o"
        },
        "--doNotWriteOriginalQuals" : {
          "description" : "Do not write out the original qualities as an extra tag in the BAM file",
          "input" : "false",
          "output" : "false",
          "resource" : "false",
          "required" : "false",
          "dependent" : "false",
          "type" : "flag",
          "short form argument" : "-noOQs"
        }
      }
    }
  }
}
