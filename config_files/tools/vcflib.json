{
  "tools" : {
    "vcflib-filter" : {
      "description" : "Filter vcf files on a variety of parameters.",
      "path" : "vcflib",
      "executable" : "vcffilter",
      "hide tool" : true,
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "The input vcf file.",
          "short form argument" : "-i",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "extension" : "vcf|vcf.gz",
          "if input is stream" : "do not include",
          "type" : "string"
        },
        "--out" : {
          "description" : "The output filtered VCF file.",
          "short form argument" : "-o",
          "output" : true,
          "input" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "filtered.vcf",
          "modify argument name on command line" : "stdout"
        },
        "--info-filter" : {
          "description" : "Specifies a filter to apply to the info fields of records, removes alleles which do not pass the filter.",
          "short form argument" : "-f",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "allow multiple definitions" : true,
          "extension" : "no extension",
          "type" : "string"
        },
        "--genotype-filter" : {
          "description" : "Specifies a filter to apply to the genotype fields of records.",
          "short form argument" : "-g",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "--tag" : {
          "description" : "Tag vcf records as filtered with this tag instead of suppressing them.",
          "short form argument" : "-t",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "--allele-tag" : {
          "description" : "Apply -t on a per-allele basis.  Adds or sets the corresponding INFO field tag.",
          "short form argument" : "-a",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        },
        "--invert" : {
          "description" : "Inverts the filter, e.g. grep -v.",
          "short form argument" : "-v",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        },
        "--or" : {
          "description" : "Use logical OR instead of AND to combine filters.",
          "short form argument" : "-or",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        },
        "--region" : {
          "description" : "Specify a region on which to target the filtering, requires a BGZF compressed file which has been indexed with tabix.  Any number of regions may be specified.",
          "short form argument" : "-r",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        }
      },
      "argument order" : [
        "--info-filter",
        "--genotype-filter",
        "--tag",
        "--allele-tag",
        "--invert",
        "--or",
        "--region",
        "--in",
        "--out"
      ],
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "vcflib-sort" : {
      "description" : "Sort a vcf file.",
      "path" : "vcflib",
      "executable" : "vcfsort",
      "hide tool" : false,
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "The input vcf file.",
          "short form argument" : "-i",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "extension" : "vcf|vcf.gz",
          "if input is stream" : "do not include",
          "type" : "string"
        },
        "--out" : {
          "description" : "The output sorted VCF file.",
          "short form argument" : "-o",
          "output" : true,
          "input" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "sorted.vcf",
          "if output to stream" : "do not include",
          "modify argument name on command line" : "stdout"
        }
      },
      "argument order" : [
        "--in",
        "--out"
      ],
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "vcflib-intersect" : {
      "description" : "Intersect vcf files.",
      "path" : "vcflib",
      "executable" : "vcfintersect",
      "hide tool" : false,
      "help" : "--help|-h",
      "arguments" : {
        "--in" : {
          "description" : "The input vcf file.",
          "short form argument" : "-i",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "extension" : "vcf|vcf.gz",
          "if input is stream" : "do not include",
          "modify argument name on command line" : "hide",
          "type" : "string"
        },
        "--out" : {
          "description" : "The output VCF file.",
          "short form argument" : "-o",
          "output" : true,
          "input" : false,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "vcf",
          "if output to stream" : "do not include",
          "modify argument name on command line" : "stdout"
        },
        "--intersect-vcf" : {
          "description" : "Vcf file to intersect with.",
          "short form argument" : "-f",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "vcf|vcf.gz",
          "type" : "string"
        },
        "--union-vcf" : {
          "description" : "Vcf file to perform union with.",
          "short form argument" : "-u",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "vcf|vcf.gz",
          "type" : "string"
        },
        "--invert" : {
          "description" : "Invert the selection, e.g. print out the opposite of the selection.",
          "short form argument" : "-v",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        },
        "--reference" : {
          "description" : "The reference fasta file.",
          "short form argument" : "-r",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "extension" : "fa|fasta",
          "type" : "string"
        }
      },
      "argument order" : [
        "--intersect-vcf",
        "--union-vcf",
        "--invert",
        "--reference",
        "--in",
        "--out"
      ],
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    }
  }
}
