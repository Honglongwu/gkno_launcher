{
  "tools" : {
    "mosaik-build-reference" : {
      "description" : "Build the Mosaik reference",
      "path" : "MOSAIK/bin",
      "executable" : "MosaikBuild",
      "help" : "--help|-h",
      "arguments" : {
        "-fr" : {
          "description" : "The FASTA reference sequence file",
          "input" : true,
          "use for filenames" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "short form argument" : "-a",
          "extension" : "fasta|fa"
        },
        "-oa" : {
          "description" : "The output Mosaik reference file",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "dat"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "mosaik-build-fastq" : {
      "description" : "Build the Mosaik read archive",
      "path" : "MOSAIK/bin",
      "executable" : "MosaikBuild",
      "help" : "--help|-h",
      "arguments" : {
        "-q" : {
          "description" : "The FASTQ file",
          "input" : true,
          "use for filenames" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "fastq|fq|fastq.gz|fq.gz"
        },
        "-q2" : {
          "description" : "The FASTQ 2nd mate",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : true,
          "type" : "string",
          "extension" : "fastq|fq|fastq.gz|fq.gz"
        },
        "-id" : {
          "description" : "Read group ID. e.g. SRR009060",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-mfl" : {
          "description" : "Median fragment length. e.g. 150",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "integer"
        },
        "-sam" : {
          "description" : "Sample name. e.g. NA12878",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-cn" : {
          "description" : "The sequencing center name.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-ln" : {
          "description" : "The library name. e.g. g1k-sc-NA18944-JPT-1.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-pu" : {
          "description" : "The platform unit. e.g. IL12_490_5.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-st" : {
          "description" : "Sets the sequencing technology: '454', 'helicos', 'illumina', 'illumina_long', 'sanger' or 'solid'",
          "input" : false,
          "output" : false,
          "required" : true,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "string"
        },
        "-out" : {
          "description" : "The output read file",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "extension" : "mkb"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },
  
    "mosaik-jump" : {
      "description" : "Generate the jump database for a Mosaik reference",
      "path" : "MOSAIK/bin",
      "executable" : "MosaikJump",
      "help" : "--help|-h",
      "arguments" : {
        "-ia" : {
          "description" : "Input reference file",
          "input" : true,
          "use for filenames" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "dat"
        },
        "-out" : {
          "description" : "Output filename stub",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "stub" : true,
          "extension" : "stub",
          "outputs" : [
            "_keys.jmp",
            "_meta.jmp",
            "_positions.jmp"
          ]
        },
        "-hs" : {
          "description" : "Hash size [4 - 32]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension",
          "default" : [
            "14"
          ]
        },
        "-kd" : {
          "description" : "Keeps the key database on disk",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        },
        "-mem" : {
          "description" : "The amount memory used when sorting <Gb>",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "integer"
        },
        "-iupac" : {
          "description" : "Considers IUPAC codes",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "extension" : "no extension",
          "type" : "flag"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    },

    "mosaik-aligner" : {
      "description" : "Pairwise alignment of a read archive",
      "path" : "MOSAIK/bin",
      "executable" : "MosaikAligner",
      "help" : "--help|-h",
      "arguments" : {
        "-in" : {
          "description" : "The input read file",
          "input" : true,
          "use for filenames" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "mkb"
        },
        "-ia" : {
          "description" : "The input reference file (Mosaik native dat file)",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "dat"
        },
        "-j" : {
          "description" : "The Mosaik jump database",
          "input" : true,
          "output" : false,
          "required" : false,
          "dependent" : true,
          "type" : "string",
          "stub" : true,
          "extension" : "stub",
          "outputs" : [
            "_keys.jmp",
            "_meta.jmp",
            "_positions.jmp"
          ]
        },
        "-out" : {
          "description" : "The output alignment file",
          "input" : false,
          "output" : true,
          "required" : true,
          "dependent" : false,
          "type" : "string",
          "stub" : true,
          "extension" : "stub",
          "outputs" : [
            ".bam",
            ".multiple.bam"
          ]
        },
        "-annse" : {
          "description" : "Neural network file for single end read mapping qualities",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "ann"
        },
        "-annpe" : {
          "description" : "Neural network file for paired end read mapping qualities",
          "input" : true,
          "output" : false,
          "required" : true,
          "dependent" : true,
          "type" : "string",
          "extension" : "ann"
        },
        "-a" : {
          "description" : "Alignment algorithm: [fast, single, multi, all]. def: all",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "flag",
          "extension" : "no extension"
        },
        "-m" : {
          "description" : "Alignment mode: [unique, all]. def: all",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "-hs" : {
          "description" : "Hash size [4 - 32].",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mmp" : {
          "description" : "The percentage of mismatches allowed [0.0 - 1.0]",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "float",
          "extension" : "no extension"
        },
        "-act" : {
          "description" : "The alignment candidate threshold (length)",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-bw" : {
          "description" : "Specifies the Smith-Waterman bandwidth.  Default: 9",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-mhp" : {
          "description" : "The maximum number of positions stored per seed",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-p" : {
          "description" : "Uses the specified number of processors",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        },
        "-sref" : {
          "description" : "Specifies the prefixes of 'special' reference sequences.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "string",
          "extension" : "no extension"
        },
        "-srefn" : {
          "description" : "Specifies the maximum number of hashes for the special reference sequences.",
          "input" : false,
          "output" : false,
          "required" : false,
          "dependent" : false,
          "type" : "integer",
          "extension" : "no extension"
        }
      },
      "instances" : {
        "default" : {
          "description" : "Default instance requires the users input for all files."
        }
      }
    }
  }
}
