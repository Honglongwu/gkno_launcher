{
  "description" : "Compress a file using bgzip.",
  "path" : "tabix",
  "hide tool" : true,
  "executable" : "bgzip",
  "help" : "--help|-h",
  "arguments" : {
    "--in" : {
      "description" : "The file to be compressed.",
      "short form argument" : "-i",
      "input" : true,
      "output" : false,
      "required" : true,
      "data type" : "string",
      "extension" : "vcf",
      "modify argument name on command line" : "hide",
      "if input is stream" : "do not include"
