{
  "description" : "Mark duplicate reads.",
  "path" : "picard/dist",
  "executable" : "MarkDuplicates.jar",
  "precommand" : "java -Xmx8g -jar",
  "argument delimiter" : "=",
  "help" : "--help|-h",
  "arguments" : [
    {
      "description" : "the input BAM file.",
      "long form argument" : "--in",
      "short form argument" : "-i",
      "command line argument" : "INPUT",
      "input" : true,
      "output" : false,
      "required" : true,
      "data type" : "string",
      "extension" : "bam"
    },
    {
      "description" : "the output BAM file.",
      "long form argument" : "--out",
      "short form argument" : "-o",
      "command line argument" : "OUTPUT",
      "input" : false,
      "output" : true,
      "required" : true,
      "data type" : "string",
      "extension" : "bam",
      "construct filename" : {
        "ID": "from tool argument",
        "use argument" : "--in",
        "modify extension" : "replace",
        "add additional text" : "marked"
      }
    },
    {
      "description" : "File to write duplication metrics to.",
      "long form argument" : "--metrics",
      "short form argument" : "-m",
      "command line argument" : "METRICS_FILE",
      "input" : false,
      "output" : true,
      "required" : true,
      "data type" : "string",
      "extension" : "metrics",
      "construct filename" : {
        "ID": "from tool argument",
        "use argument" : "--in",
        "modify extension" : "replace"
      }
    },
    {
      "description" : "Temporary directory for storing temporary data.",
      "long form argument" : "--temp-dir",
      "short form argument" : "-t",
      "command line argument" : "TMP_DIR",
      "input" : false,
      "output" : false,
      "required" : false,
      "data type" : "string",
      "extension" : "no extension"
    }
  ],

  "instances" : {
    "default" : {
      "description" : "Default instance requires the users input for all files."
    },

    "test" : {
      "description" : "Instance for use with the test-harness.",
      "nodes" : [
        {
          "ID" : "bam",
          "values" : ["../resources/tutorial/current/simulated_reads.bam"],
          "argument" : "--in"
        },
        {
          "ID" : "temp dir",
          "values" : ["./"],
          "argument" : "--temp-dir"
        },
        {
          "ID" : "output path",
          "values" : ["./"],
          "argument" : "--output-path"
        }
      ]
    }
  }
}
